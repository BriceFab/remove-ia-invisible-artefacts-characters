{
  "name": "bricefab/ia-remove-invisible-artefacts-characters",
  "description": "PHP library to remove invisible Unicode characters and artefacts (zero-width, BOM, NBSP, bidi marks) often found in AI-generated texts.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "BriceFab\\InvisibleCleaner\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BriceFab\\InvisibleCleaner\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.1",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5"
  },
  "bin": [
    "bin/ia-invisible-cleaner"
  ],
  "keywords": [
    "ai",
    "remove",
    "unicode",
    "zero width",
    "invisible characters",
    "artefacts",
    "text cleaner",
    "ia cleaner",
    "nbsp",
    "bidi",
    "bom",
    "sanitize"
  ],
  "support": {
    "issues": "https://github.com/BriceFab/remove-ia-invisible-artefacts-characters/issues",
    "source": "https://github.com/BriceFab/remove-ia-invisible-artefacts-characters"
  }
}
